        SELECT *
        FROM sys_role_api ra
                 INNER JOIN sys_role r ON ra.role_id = r.id
        <if test="apiIds != null and apiIds.size > 0">
            WHERE ra.api_id IN (
            <foreach collection="apiIds" item="id" separator=",">
                #{id}
            </foreach>
            )
        </if>
    </select>
