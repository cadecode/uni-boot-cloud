<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.5.2</version>
        <relativePath />
    </parent>

    <groupId>top.cadecode</groupId>
    <artifactId>simple-rest-admin</artifactId>
    <version>0.0.1-SNAPSHOT</version>

    <packaging>pom</packaging>
    <name>simple-admin</name>
    <description>基于 SpringBoot 多模块开发，Rest 风格的后台管理系统</description>
    <!--子模块-->
    <modules>
        <module>simple-common</module>
        <module>simple-framework</module>
        <module>simple-application</module>
        <module>simple-test</module>
    </modules>

    <!--依赖版本-->
    <properties>
        <java.version>1.8</java.version>
        <sra.version>0.0.1-SNAPSHOT</sra.version>

        <knife4j.version>2.0.5</knife4j.version>
        <mybatis.version>2.2.0</mybatis.version>
        <mybatis-plus.version>3.5.1</mybatis-plus.version>
        <guava.vsersion>31.0.1-jre</guava.vsersion>
        <hutool.vsersion>5.8.0</hutool.vsersion>
        <p6spy.version>3.8.1</p6spy.version>
    </properties>

    <dependencies>
        <!--lombok-->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>
        <!--hutool-->
        <dependency>
            <groupId>cn.hutool</groupId>
            <artifactId>hutool-all</artifactId>
            <version>${hutool.vsersion}</version>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <!--子模块-->
            <dependency>
                <groupId>top.cadecode</groupId>
                <artifactId>simple-common</artifactId>
                <version>${sra.version}</version>
            </dependency>
            <dependency>
                <groupId>top.cadecode</groupId>
                <artifactId>simple-framework</artifactId>
                <version>${sra.version}</version>
            </dependency>
            <dependency>
                <groupId>top.cadecode</groupId>
                <artifactId>simple-test</artifactId>
                <version>${sra.version}</version>
            </dependency>
            <!--swagger-->
            <dependency>
                <groupId>com.github.xiaoymin</groupId>
                <artifactId>knife4j-spring-boot-starter</artifactId>
                <version>${knife4j.version}</version>
            </dependency>
            <!--mybatis-->
            <dependency>
                <groupId>org.mybatis.spring.boot</groupId>
                <artifactId>mybatis-spring-boot-starter</artifactId>
                <version>${mybatis.version}</version>
            </dependency>
            <!--mybatis plus-->
            <dependency>
                <groupId>com.baomidou</groupId>
                <artifactId>mybatis-plus-boot-starter</artifactId>
                <version>${mybatis-plus.version}</version>
            </dependency>
            <!--guava-->
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>${guava.vsersion}</version>
            </dependency>
            <!--p6spy-->
            <dependency>
                <groupId>p6spy</groupId>
                <artifactId>p6spy</artifactId>
                <version>${p6spy.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <!--阿里云镜像-->
    <repositories>
        <repository>
            <id>aliyun</id>
            <name>aliyun</name>
            <url>https://maven.aliyun.com/repository/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>aliyun-plugin</id>
            <name>aliyun-plugin</name>
            <url>https://maven.aliyun.com/repository/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
</project>
