<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.5.2</version>
        <relativePath />
    </parent>

    <groupId>top.cadecode</groupId>
    <artifactId>simple-spring-boot</artifactId>
    <version>0.0.1-SNAPSHOT</version>

    <packaging>pom</packaging>
    <name>simple-spring-boot</name>
    <description>Demo project for Spring Boot</description>
    <!--引入子项目模块-->
    <modules>
        <module>simple-common</module>
        <module>simple-model</module>
        <module>simple-web</module>
    </modules>
    <!--配置阿里云镜像-->
    <repositories>
        <repository>
            <id>aliyun</id>
            <name>aliyun</name>
            <url>https://maven.aliyun.com/repository/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <!--统一管理依赖版本-->
    <properties>
        <java.version>1.8</java.version>
        <simple-common.version>0.0.1-SNAPSHOT</simple-common.version>
        <simple-model.version>0.0.1-SNAPSHOT</simple-model.version>
        <knife4j.version>2.0.5</knife4j.version>
    </properties>

    <dependencies>
        <!--引入 lombok-->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <!--配置子项目版本-->
            <dependency>
                <groupId>top.cadecode</groupId>
                <artifactId>simple-common</artifactId>
                <version>${simple-common.version}</version>
            </dependency>
            <dependency>
                <groupId>top.cadecode</groupId>
                <artifactId>simple-model</artifactId>
                <version>${simple-model.version}</version>
            </dependency>
            <!--配置 swagger 版本-->
            <dependency>
                <groupId>com.github.xiaoymin</groupId>
                <artifactId>knife4j-spring-boot-starter</artifactId>
                <version>${knife4j.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
