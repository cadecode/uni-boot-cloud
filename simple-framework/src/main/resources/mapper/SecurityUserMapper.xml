<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.cadecode.framework.model.mapper.SecurityUserMapper">
    <resultMap id="SecurityUserVoMap" type="top.cadecode.framework.model.vo.SecurityUserVo">
        <result column="user_id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="nick_name" property="nickName" />
        <result column="enable_flag" property="enableFlag" />
        <result column="refresh_token" property="refreshToken" />
        <result column="token_time" property="tokenTime" />
        <collection property="roles" ofType="string">
            <result column="code" />
        </collection>
    </resultMap>
    <update id="updateSecurityUserToken">
        UPDATE security_user
        SET refresh_token = #{token},
            token_time    = CURRENT_TIMESTAMP()
        WHERE id = #{id}
    </update>
    <select id="getSecurityUserVo" resultMap="SecurityUserVoMap">
        SELECT sru.user_id,
               su.username,
               su.password,
               su.nick_name,
               su.enable_flag,
               su.refresh_token,
               su.token_time,
               sr.code
        FROM security_user su
                 LEFT JOIN security_role_user sru ON su.id = sru.user_id
                 LEFT JOIN security_role sr ON sru.role_id = sr.id
        WHERE su.username = #{username}
    </select>
</mapper>
